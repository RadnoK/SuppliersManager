<?xml version="1.0" encoding="UTF-8"?>

<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <imports>
        <import resource="services/**/*.xml" />
    </imports>

    <services>
        <service id="event_dispatcher" class="Symfony\Component\EventDispatcher\EventDispatcher" />

        <service id="guzzle" class="GuzzleHttp\Client" />

        <service id="monolog.handler.stream_handler" class="Monolog\Handler\StreamHandler">
            <argument>%root_dir%/log/supplier.log</argument>
            <argument>200</argument>
        </service>

        <service id="monolog.logger" class="Monolog\Logger">
            <argument>suppliers_logger</argument>
            <argument type="collection">
                <argument type="service" id="monolog.handler.stream_handler"/>
            </argument>
        </service>
    </services>
</container>
